{
  "compilerOptions": {
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": ".",
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "resolveJsonModule": true,
    "types": ["node"],
    "module": "nodenext",
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "checkJs": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  }
}
